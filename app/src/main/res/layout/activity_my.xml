<?xml version="1.0" encoding="utf-8"?>
<LinearLayout n1:orientation="vertical" n1:layout_width="fill_parent" n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        n1:background="@drawable/my_back"
        n1:layout_width="fill_parent"
        n1:layout_height="@dimen/dp_200">

        <TextView
            n1:id="@id/mypage_setting"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_alignParentRight="true"
            n1:padding="@dimen/dp_10"
            n1:text="@string/mine_fragment_setting"
            n1:textColor="@color/white"
            n1:textSize="@dimen/sp_16" />
        <LinearLayout n1:gravity="center" n1:orientation="vertical" n1:layout_width="wrap_content" n1:layout_height="wrap_content" n1:layout_centerInParent="true">

            <ImageView
                n1:id="@id/mypage_image"
                n1:layout_width="@dimen/dp_70"
                n1:layout_height="@dimen/dp_70"
                n1:src="@drawable/logo" />

            <TextView
                n1:id="@id/mypage_user"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:ellipsize="end"
                n1:paddingTop="5.0dip"
                n1:singleLine="true"
                n1:text="@string/mine_fragment_nickname"
                n1:textColor="@color/white"
                n1:textSize="@dimen/sp_16" />
        </LinearLayout>
        <android.support.design.widget.TabLayout
            n1:id="@+id/tab_mine"
            n1:layout_width="fill_parent"
            n1:layout_height="@dimen/dp_40"
            n1:layout_alignParentBottom="true"
            n2:tabGravity="center"
            n2:tabIndicatorColor="@color/orange"
            n2:tabMode="fixed"
            n2:tabSelectedTextColor="@color/orange"
            n2:tabTextColor="@color/white"
            xmlns:n2="http://schemas.android.com/apk/res-auto" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        n1:id="@+id/vp_mine"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent" />

</LinearLayout>